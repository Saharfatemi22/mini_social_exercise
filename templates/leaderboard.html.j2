{% extends "base.html.j2" %}
{% block content %}
<h2 class="text-center mb-4">🏆 Community Leaderboard</h2>

<div class="col-md-8 mx-auto">
  <table class="table table-striped table-bordered text-center shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Rank</th>
        <th>Username</th>
        <th>Reputation ⭐</th>
      </tr>
    </thead>
    <tbody>
      {% for user in leaderboard_data %}
      <tr>
        <td>{{ loop.index }}</td>
        <td><a href="/u/{{ user.username }}">{{ user.username }}</a></td>
        <td>{{ user.score }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}

